# Raindrop to Bluesky Bot - Environment Configuration
# Copy this file to .env and fill in your actual values

# Raindrop.io API Configuration
RAINDROP_TOKEN=your_raindrop_api_token_here

# Bluesky Account Configuration
BLUESKY_IDENTIFIER=your.bluesky.handle
BLUESKY_PASSWORD=your_bluesky_app_password

# Email Notification Configuration (for error alerts)
ADMIN_EMAIL=your_admin_email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=465
SMTP_LOGIN=your_smtp_username@gmail.com
SMTP_PASSWORD=your_smtp_app_password

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=WARNING

# Optional: Timezone (set in docker-compose.yml)
# TZ=America/New_York
